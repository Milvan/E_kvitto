<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/whitebackground"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/compName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Company Name"
        android:textColor="#000000"
        android:textSize="22sp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/receiptDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Date"
        android:textColor="#000000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/receiptTime"
        android:layout_width="181dp"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:text="time"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/receiptID"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="receiptID"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sellerId"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:text="sellerID"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/terminalId"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="terminalID"
        android:textColor="#000000" />

    
    <TextView	
        android:id="@+id/totalSum"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:text="totalsum"
        android:textColor="#000000"
        android:textSize="22sp" />
        

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView 
                android:text="artikel"
                android:textColor="#000000"
                />
            <TextView 
                android:text="moms"
                android:gravity="right"
                android:textColor="#000000"
                />
            <TextView 
                android:text="summa"
                android:gravity="right"
                android:textColor="#000000"
                />
            
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/receiptArticle"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:paddingLeft="10dp" 
        android:listSelector="@android:color/transparent" >
        
    </ListView>

</LinearLayout>